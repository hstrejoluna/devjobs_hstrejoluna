<main class="lista-vacantes">
  <h2>Vacancy List</h2>


  {{#if vacancies.length}}

  {{#each vacancies as | vacancy |}}
  <div class="vacante">
    <div class="caja">
      <h3>{{vacancy.company}}</h3>
      <p class="puesto">{{vacancy.title}}</p>
    </div>
    <div class="caja">
      <p class="etiqueta">Location</p>
      <p class="nombre">{{vacancy.location}}</p>
    </div>
    <div class="caja">
      <p class="etiqueta">Contract</p>
      <p class="nombre contrato">{{vacancy.contract}}</p>
    </div>
    <div class="caja centrar-vertical">
      <a href="/vacancies/{{vacancy.url}}" class="btn btn-verde">More Info</a>
    </div>
  </div> <!-- Vacancy --->
  {{/each}}
  {{else}}
  <p>There's no Vacancies'</p>
  {{/if}}
</main>