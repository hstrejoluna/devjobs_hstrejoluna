<main class="lista-vacantes">
  <h2>Vacancy List</h2>


  {{#if vacancies.length}}

  {{#each vacancies}}
  <div class="vacante">
    <div class="caja">
      <h3>{{company}}</h3>
      <p class="puesto">{{title}}</p>
    </div>
    <div class="caja">
      <p class="etiqueta">Location</p>
      <p class="nombre">{{location}}</p>
    </div>
    <div class="caja">
      <p class="etiqueta">Contract</p>
      <p class="nombre contrato">{{contract}}</p>
    </div>
    <div class="caja centrar-vertical">
      <a href="/vacancies/{{url}}" class="btn btn-verde">More Info</a>
    </div>
  </div> <!-- Vacancy --->
  {{/each}}
  {{else}}
  <p>There's no Vacancies'</p>
  {{/if}}
</main>