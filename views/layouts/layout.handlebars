<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      href="https://fonts.googleapis.com/css?family=Rubik:400,700,900"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/trix.css" />
    <title>{{pageName}}</title>
    <link rel="stylesheet" href="/css/app.css" />
  </head>
  <body>

    <div class="nombre-sitio contenedor">
      <h1>
        <a href="/">DevJobs</a>
      </h1>

      {{#if barra}}
        <div class="buscador">
          <form action="/buscador">
            <input type="text" class="buscar" />
            <input type="submit" value="Search" />
          </form>
        </div>
      {{/if}}

      {{#if logout}}
        <div class="cerrar-sesion">
          <p>Hello {{name}}</p>
          {{#if image}}
            <img src="/uploads/profiles/{{image}}" class="admin-perfil" />
          {{/if}}
          <a href="/admin">Dashboard</a>
          <a href="/logout">Logout</a>
        </div>
      {{/if}}
    </div>

    <header class="site-header contenedor separador">
      <h2>{{pageName}}</h2>
      {{#if tagLine}}
        <p class="tagline">{{tagLine}}</p>
      {{/if}}

      {{#if boton}}
        <a href="/vacancies/new" class="btn btn-azul">Publish a New Vacancy</a>
      {{/if}}
    </header>

    <div class="contenido-principal contenedor">
      {{#if messages}}
        <div class="alertas">
          {{#showAlerts messages}}
            <li>do</li>
          {{/showAlerts}}
        </div>
      {{/if}}
      {{{body}}}
    </div>
    <script src="/js/trix.js"></script>
    <script src="/dist/bundle.js"></script>
  </body>
</html>