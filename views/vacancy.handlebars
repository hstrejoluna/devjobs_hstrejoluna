<div class="contenido-superior vacante contenedor">
  <div class="caja">
    <p class="etiqueta">Company / organization</p>
    <p class="nombre">{{vacancy.company}}</p>
  </div>
  <div class="caja">
    <p class="etiqueta">Location</p>
    <p class="nombre">{{vacancy.location}}</p>
  </div>
  <div class="caja">
    <p class="etiqueta">Contract</p>
    <p class="nombre contrato">{{vacancy.contract}}</p>
  </div>
</div>

<div class="vacante-contenedor contenedor">
  <main class="contenido">
    <h2>Vacancy Description</h2>
    <div class="vacante-descripcion">
      {{{vacancy.description}}}
    </div>
    <a
      href="/vacancies/edit/{{vacancy.url}}"
      class="btn btn-azul editar-btn"
    >Edit</a>
  </main>
  <aside class="sidebar">
    <h2>Required Skills</h2>
    <ul class="skills">
      {{#each vacancy.skills}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  </aside>
</div>

<div class="contenedor datos-reclutador">
  <div class="enviar-datos">
    <h2>Contact Recruiter</h2>
    <p>Fill this form and upload your Curriculum</p>
    <form
      method="POST"
      action="/vacancies/{{vacancy.url}}"
      class="default-form"
      enctype="multipart/form-data"
    >
      <div class="campo">
        <label>Name</label>
        <input type="text" name="name" placeholder="Your Name" />
      </div>
      <div class="campo">
        <label>E-mail</label>
        <input type="email" name="email" placeholder="Your E-mail" />
      </div>
      <div class="campo">
        <label>CV (PDF)</label>
        <input type="file" name="cv" />
      </div>
      <div class="campo">
        <input type="submit" class="btn btn-verde" value="Send" />
      </div>
    </form>
  </div>

  <div class="info-reclutador">
    <h2>About Recruiter</h2>
    {{#if vacancy.author.name}}
      <p>{{vacancy.author.name}}</p>
    {{/if}}
    {{#if vacancy.author.image}}
      <img src="/uploads/profiles/{{vacancy.author.image}}" />
    {{/if}}
  </div>
</div>