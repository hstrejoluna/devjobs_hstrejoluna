<main class="contenedor">
  <form
    action="/vacancies/edit/{{vacancy.Url}}"
    method="POST"
    class="default-form"
  >
    <h3>ðŸ‘®ðŸ‘® General Information ðŸ‘®ðŸ‘®</h3>
    <div class="campo">
      <label>Title</label>
      <input
        type="text"
        name="Title"
        value="{{vacancy.Title}}"
        placeholder="Ej: React Developer"
        required
      />
    </div>
    <div class="campo">
      <label>Company / Organization</label>
      <input
        type="text"
        name="Company"
        value="{{vacancy.Company}}"
        placeholder="Agency, Anon, Corporate..."
        required
      />
    </div>
    <div class="campo">
      <label>Location</label>
      <input
        type="text"
        name="Location"
        value="{{vacancy.Location}}"
        placeholder="(Country) + Remote, In Site, Home Office..."
        required
      />
    </div>
    <div class="campo">
      <label>Salary</label>
      <input
        type="text"
        name="Salary"
        value="{{vacancy.Salary}}"
        placeholder="USD, USB, Crypto, Sheeps, Food, A Large Pizza and a 3 Lt. Coke?"
        required
      />
    </div>
    <div class="campo">
      <label>Contract</label>
      <select name="Contract">
        {{#contractType vacancy.Contract}}
          <option value="" disabled selected>- Choose One ðŸŒ™-</option>
          <option value="Freelance">Freelance</option>
          <option value="Full Time">Full Time</option>
          <option value="Half Time">Half Time</option>
          <option value="Per Project">Per Project</option>
          <option value="Other">Specify on the description</option>
        {{/contractType}}
      </select>
    </div>
    <h3>Description or suspense script</h3>
    <div class="campo descripcion">
      <label>Description</label>
      <input
        type="hidden"
        value="{{{vacancy.Description}}}"
        id="x"
        name="Description"
      />
      <trix-editor input="x"></trix-editor>
    </div>

    <h3>Skills</h3>
    <ul class="lista-conocimientos">
      {{#selectSkills vacancy.Skills}}{{/selectSkills}}
    </ul>

    <div class="campo centrar-horizontal">
      <input type="hidden" name="Skills" id="Skills" />
      <input type="submit" value="Save Changes" class="btn btn-azul" />
    </div>
  </form>
</main>