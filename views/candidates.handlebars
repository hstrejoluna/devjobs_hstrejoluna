<main class="lista-candidatos">
  <h2>Candidates List</h2>
  {{#if candidates.length}}
    {{#each candidates}}
      <div class="candidato">
        <div class="caja">
          <p class="etiqueta">Name:</p>
          <p class="nombre">{{name}}</p>
        </div>
        <div class="caja">
          <p class="etiqueta">E-mail:</p>
          <p class="nombre">{{email}}</p>
        </div>
        <div class="caja">
          <a href="/uploads/cv/{{cv}}" class="btn btn-verde">
            Show Resume
          </a>
        </div>
      </div>
    {{/each}}
  {{else}}
    <p>There's not candidates'</p>
  {{/if}}
</main>