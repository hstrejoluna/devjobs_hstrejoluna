<main class="container">
  <form action="/edit-profile" method="POST" class="default-form">
    <div class="campo">
      <label for="name">Name</label>
      <input
        value={{user.name}}
        type="text"
        name="name"
        placeholder="Your name"
      />
    </div>
    <div class="campo">
      <label for="email">E-mail</label>
      <input
        value={{user.email}}
        type="email"
        name="email"
        placeholder="Your email"
      />
    </div>
    <div class="campo">
      <label for="password">Password</label>
      <input type="password" name="password" placeholder="Your password" />
    </div>

    <div class="campo">
      <input type="submit" class="btn btn-azul" value="Save Changes" />
    </div>
  </form>

</main>