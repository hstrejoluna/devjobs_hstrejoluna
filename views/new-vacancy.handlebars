<main class="contenedor">
  <form action="/vacancies/new" method="POST" class="default-form">
    <h3>General Information</h3>
    <div class="campo">
      <label>Title</label>
      <input
        type="text"
        name="title"
        placeholder="Ej: React Developer"
        required
      />
    </div>
    <div class="campo">
      <label>Company || Organization</label>
      <input
        type="text"
        name="Company"
        placeholder="Agency, Anon, Corporate..."
        required
      />
    </div>
    <div class="campo">
      <label>Location</label>
      <input
        type="text"
        name="Location"
        placeholder="(Country) + Remote, In Site, Home Office..."
        required
      />
    </div>
    <div class="campo">
      <label>Salary</label>
      <input
        type="text"
        name="Salary)"
        placeholder="USD, USB, Crypto, Sheeps, Food, A Large Pizza and a 3 Lt. Coke?"
        required
      />
    </div>
      <div class="campo">
      <label>Contract</label>
        <select name="Contract"
    </div>

  </form>
</main>